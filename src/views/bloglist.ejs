<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">content</th>
                <th scope="col">image</th>
                
              </tr>
            </thead>
            <tbody class="table-group-divider">
                <%for(let i = 0; i < blogs.length; i++) {%>
                    <tr>
                      <th scope="row"><%= i +1%></th>
                      <td><a href="/blog/detail/<%= blogs[i].id%>"><%= blogs[i].title%></a></td>
                      <td><%= blogs[i].content%></td>
                      <td><%= blogs[i].image%></td>
            
                      <td><a href="/blog/delete/<%=blogs[i].id%>" class="btn btn-danger">Delete</a></td>
                      <td><a href="/blog/edit/<%=blogs[i].id%>" class="btn btn-primary">Edit</a></td>

                    </tr>
                <%}%>
            </tbody>
          </table>

          <a href="/blog/create" class="btn btn-primary"> Add</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>